@model SeekYourCareer.Models.AddNewRepresentative

@{
    ViewBag.Title = "addNewRepresentative";
}
<style>
    .editor-field input[type="radio"] 
    {
        width:50px;
    }
    </style>
<h2>Add A New Representative</h2>


@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>AddNewRepresentative</legend>
        
        <br />
        <br />
        <h3>Account Details</h3>
        <br />
        <br />
        <div class="editor-label">
            @Html.LabelFor(model => model.Password)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Password)
            @Html.ValidationMessageFor(model => model.Password)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ConfirmPassword)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ConfirmPassword)
            @Html.ValidationMessageFor(model => model.ConfirmPassword)
        </div>
        <br />
        <br />
        <h3>Company Details</h3>
        <br />
        <br />
        
        <div class="editor-label">
            @Html.LabelFor(model => model.companyName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.companyName)
            @Html.ValidationMessageFor(model => model.companyName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Address)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Address)
            @Html.ValidationMessageFor(model => model.Address)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.phoneNumber)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.phoneNumber)
            @Html.ValidationMessageFor(model => model.phoneNumber)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.EmailId)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EmailId)
            @Html.ValidationMessageFor(model => model.EmailId)
        </div>
        <br />
        <br />

        <br />
        <br />
        <h3>Company Offerings</h3>
        <br />
        
        <div class="editor-label">
            @Html.LabelFor(model => model.Training)
        </div>
        <div class="editor-field">
            @Html.RadioButtonFor(model => model.Training, true) Yes
            @Html.RadioButtonFor(model => model.Training, false) No
            @Html.ValidationMessageFor(model => model.Training)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Workshop)
        </div>
        <div class="editor-field">
              @Html.RadioButtonFor(model => model.Workshop, true) Yes
            @Html.RadioButtonFor(model => model.Workshop, false) No
            @Html.ValidationMessageFor(model => model.Workshop)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Job)
        </div>
        <div class="editor-field">
            @Html.RadioButtonFor(model => model.Job, true) Yes
            @Html.RadioButtonFor(model => model.Job, false) No
            @Html.ValidationMessageFor(model => model.Job)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Internship)
        </div>
        <div class="editor-field">
            @Html.RadioButtonFor(model => model.Internship, true) Yes
            @Html.RadioButtonFor(model => model.Internship, false) No
            @Html.ValidationMessageFor(model => model.Internship)
        </div>

        <p>
            <input type="submit" value="Register" style="text-align:center" />
            <button onclick="location.href= '@Url.Action("SearchForTraining", "Applicant")'">Cancel</button>
        </p>
    </fieldset>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
