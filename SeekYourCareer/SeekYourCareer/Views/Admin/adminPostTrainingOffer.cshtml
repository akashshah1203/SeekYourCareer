@{
    ViewBag.Title = "adminPostTrainingOffer";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<script>
    function CompanySelect(companyname)//comes here after selecting a company name from the dropdown
    {
        $("#SelectStreams").html("");
        $("#partialview").html("");
        $("#errormessage").html("");
        $('.partialviewdetails').html("");



        var url = "/Admin/adminPostJobStream";
        if (companyname == "") {
            Alert.render("Select a Company Name From The List!!!!!!");
            $('#partialview').html("");

        }
        else {

            $.ajax({
                url: url,
                data: { company: companyname },
                cache: false,
                type: "POST",
                success: function (data) {
                    //console.log(data);
                    var html;
                    html = "Streams:  ";
                    for (var i = 0; i < data.length; i++) {
                        html += "<input class=\"streamcheckbox\" id=\"checkB\" type=\"radio\" onclick=\"jobTable('" + data[i] + "','" + companyname + "')\" name=\"stream\" value=\"" + data[i] + "\">" + data[i];

                    }
                    //alert("appending");
                    $('#SelectStreams').html("");
                    $('#SelectStreams').append(html);

                },
                error: function (reponse) {

                    alert("error : " + reponse);
                }
            });
        }

    }

    function CompanySelect(companyname)//comes here after selecting the radio button
    {
        //alert("in domain-table");
        var url = "/Admin/adminTrainingOfferTable";
        
            $.ajax({
                url: url,
                data: { company: companyname },
                cache: false,
                type: "POST",
                success: function (data) {

                    if (data == "") {
                        $("#errormessage").html("");
                        Alert.render("Currently No Trainings Availabe For The Current Selection !!!!!");
                    }
                    else {
                        $("#partialview").html(data);
                    }

                },
                error: function (reponse) {
                    Alert.render(" not success");

                    Alert.render("error : " + reponse);
                }
            });
        
      }
</script>




<h2 style="text-align:center">Post Training Offer</h2>

