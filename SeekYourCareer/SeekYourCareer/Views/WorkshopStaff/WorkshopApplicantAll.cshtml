    @Html.DropDownList("ddlcompany", new SelectList(@ViewBag.WSCompanyNameL), "--Select--", new { @id = "ddlcompany", @style = "width:200px;" , @onchange = "javascript:GetDomains(this.value);" }) 
</div>

