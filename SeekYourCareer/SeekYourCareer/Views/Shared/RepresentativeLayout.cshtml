<!DOCTYPE html>
<html lang=''>
<head>
   <meta charset='utf-8'>
   <meta http-equiv="X-UA-Compatible" content="IE=edge">
   <meta name="viewport" content="width=device-width, initial-scale=1">
   <link rel="stylesheet" href="~/Content/styles.css">
   <link rel="stylesheet" href="~/Content/Site.css"> 
   <script src="http://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>
   <script src="~/Content/script.js"></script>
   <title>@ViewBag.Title</title>
    @RenderSection("head", false)
</head>
<body style="background-color:#2980b9">
    <div id="Header" style="background-color:#000000; width: 100%; top:0px; height: 169px;">
        <img src="~/Content/images/Header1_2.jpg" style="height:auto;" alt="Icon1">
    </div>
    <div style="position:fixed; text-align:right; top:150px; width:100%; height:30px; background-color:#808080">
        Welcome @Session["UserName"]
    </div>
    
    <div id="middle" style="width: 100%; position:fixed; top:180px;">
        <div id='cssmenu' style="width: 300px; height: 80%;  float:left">
            <ul>
                    <li class='active'><a href='/Home/Index'><span>Home</span></a></li>
                    <li class='has-sub'><a href='#'><span>Job</span></a>
                <ul>
                     <li><a href="/Representative/addJobsTODb"><span>Add Job Offer</span></a></li>
                     <li><a href="/JobRepresentative/JobApplicantByCompany"><span>View Job Applicants</span></a></li>
                     <li class='last'><a href="/JobRepresentative/JobCandidateByCompany"><span>View Shortlisted Job Candidates</span></a></li>
                </ul>
                </li>
                <li class='has-sub'><a href='#'><span>Workshop</span></a>
                <ul>
                    <li><a href="/Representative/addWorkshopTODb"><span>Add Workshop Offer</span></a></li>
                    <li><a href="/WorkshopRepresentative/WorkshopApplicantByCompany"><span>View Workshop Applicants</span></a></li>
                    <li class='last'><a href="/WorkshopRepresentative/WorkshopCandidateByCompany"><span>View Shortlisted Workshop Applicants</span></a></li>
          
                </ul>
                </li>
                <li class='has-sub'><a href='#'><span>Training</span></a>
                <ul>
                    <li><a href="/Representative/addTrainingTODb"><span>Add Training Offer</span></a></li>
                    <li><a href="/TrainingRepresentative/TrainingApplicantByCompany"><span>View Training Applicants</span></a></li>
                    <li class='last'><a href="/TrainingRepresentative/TrainingCandidateByCompany"><span>View Shortlisted Training Candidates</span></a></li>
                    
                </ul>
                </li>
                <li class='active'><a href='/Account/ManagePassword'><span>Change Password</span></a></li>
                <li class='active'><a href='/Account/LogOff'><span>Logout</span></a></li>

            </ul>
        </div>
        <div style="position:fixed; left:310px; width:1575px; height: 740px;  float:left; border:1px solid #a1a1a1; padding:10px 10px; border-radius:25px; overflow-y:scroll">
            @RenderBody()
        </div>
    </div>
    <div id="footer" style="position:fixed; height:50px; bottom:0px; left:0px; right:0px; margin-bottom:0px; vertical-align:bottom">
        &#169 SeekYourCareer.com 2015
    </div>
     @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)

</body>
</html>
