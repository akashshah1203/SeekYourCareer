<!DOCTYPE html>
<html lang=''>
<head>
   <meta charset='utf-8'>
   <meta http-equiv="X-UA-Compatible" content="IE=edge">
   <meta name="viewport" content="width=device-width, initial-scale=1">
   <link rel="stylesheet" href="~/Content/styles.css">
   <script src="http://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>
   <script src="~/Content/script.js"></script>
   <title>@ViewBag.Title</title>
    @RenderSection("head", false)
</head>
<body>
    <div id="Header" style="width: 100%; height: 150px;">
        <div style="position:fixed; width:200px; height:150px;">
        <img src="~/Content/images/Icon1.jpg" alt="Icon1">
        </div>
        <div style="position:fixed; left:800px; align-content:center; height:150px">
        <h1 > Website Header</h1>
        </div>
        <div style="position:fixed; left:1550px; width:200px; height:150px">
        <img src="~/Content/images/Icon2.png" alt="Icon2" style="width:350px;height:150px;">
        </div>
    </div>
    <div id="middle" style="width: 100%; position:fixed; top:150px">
        <div id='cssmenu' style="width: 300px; height: 80%;  float:left">
            <ul>
                    <li class='active'><a href='#'><span>Home</span></a></li>
                    <li class='has-sub'><a href='#'><span>Job</span></a>
                <ul>
                    <li><a href='/JStaff/StVwJobApp'><span>View Job Applications</span></a></li>
                    <li class='last'><a href='/JStaff/StSelJobCanDD'><span>View Shortlisted Job Applications</span></a></li>
                </ul>
                </li>
                <li class='has-sub'><a href='#'><span>Workshop</span></a>
                <ul>
                    <li><a href='/WStaff/PostWorkshop'><span>Post Workshop</span></a></li>
                    <li><a href='/WStaff/StVwWSApp'><span>View Workshop Applications</span></a></li>
                    <li class='last'><a href='/WStaff/SelectedWorkshopApplicant'><span>View Shortlisted Workshop Applications</span></a></li>
                </ul>
                </li>
                <li class='has-sub'><a href='#'><span>Training</span></a>
                <ul>
                    <li><a href='/TStaff/StVwTrainCan'><span>View Training Applications</span></a></li>
                    <li class='last'><a href='/Staff/Index'><span>View Shortlisted Training Applications</span></a></li>
                </ul>
                </li>

            </ul>
        </div>
        <div style="position:fixed; left:350px; height: 80%;  float:left">
            @RenderBody()
        </div>
    </div>
    <div id="footer" style="position:fixed; height:50px; bottom:0px; left:0px; right:0px; margin-bottom:0px">
        <h3>Website Footer</h3>
    </div>
</body>
</html>
